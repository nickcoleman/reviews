<% include ../partials/header %>
<div class='container'>
   <div class='row'>
      <h1 class='text-center'>Edit <%= type.name %></h1>
      <div style='width: 30%; margin: 30px auto;'>
         <form action='/skiresorts/<%= type._id %>?_method=PUT' method='POST'>
            <div class='form-group'>
               <input class='form-control' type='text' name='skiresort[name]' value="<%= type.name %>"/>
            </div>
            <div class='form-group'>
               <input class='form-control' type='text' name='skiresort[image]' value="<%= type.image %>"/>
            </div>
            <div class='form-group'>
               <input class='form-control' type='text-area' name='skiresort[description]' value="<%= type.description %>"/>
            </div>
            <div class='form-group'>
               <button class='btn btn-lg btn-info btn-block' type='submit'>Submit</button>
            </div>
         </form>         
         <a href='/skiresorts/<%= type._id %>'>Go Back</a>  
      </div>
   </div>
</div>

<% include ../partials/footer %>