<% include ../partials/header %>

<div class='container'>
   <div class='row'>
      <h1 class='text-center'>Add New Ski Resort Comment to <%= skiresort.name %></h1>
      <div style='width: 30%; margin: 30px auto;'>
         <form action='/skiresorts/<%= skiresort._id %>/comments' method='POST'>
            <div class='form-group'>
               <input class='form-control' type='text' name='comment[author]' placeholder='User Name'/>
            </div>
            <div class='form-group'>
               <input class='form-control' type='text' name='comment[text]' placeholder='Comment'/>
            </div>
            <div class='form-group'>
               <button class='btn btn-lg btn-info btn-block' type='submit'>Submit</button>
            </div>
         </form>         
         <a href='/skiresorts/<%= skiresort._id %>'>Go Back</a>  
      </div>
   </div>
</div>

<% include ../partials/footer %>